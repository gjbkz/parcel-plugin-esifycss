{
    "name": "parcel-plugin-esifycss",
    "version": "0.1.3",
    "description": "A plugin to handle .css files with EsifyCSS",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "license": "Apache-2.0",
    "engines": {
        "node": ">=8"
    },
    "repository": "kei-ito/parcel-plugin-esifycss",
    "main": "lib/index.js",
    "files": [
        "lib"
    ],
    "scripts": {
        "lint:ts": "eslint --ext .ts src test @types",
        "lint:js": "eslint test",
        "lint": "run-p lint:*",
        "build:cleanup": "rimraf lib",
        "build:tsc": "tsc",
        "build:types": "cpy src/index.d.ts lib",
        "build": "run-s build:cleanup build:tsc build:types",
        "test": "ava -v",
        "version:changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 0",
        "version:add": "git add .",
        "version": "run-s version:changelog version:add",
        "prepack": "rimraf lib/**/*.test.* lib/**/*.for-test.*"
    },
    "dependencies": {
        "esifycss": "^1.3.2",
        "parcel-bundler": "^1.12.3"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.0.0",
        "@commitlint/config-conventional": "^8.0.0",
        "@nlib/lint": "^3.10.2",
        "@types/node": "^12.7.2",
        "@types/parcel-bundler": "file:@types/parcel-bundler",
        "@types/rimraf": "^2.0.2",
        "@typescript-eslint/eslint-plugin": "^2.0.0",
        "@typescript-eslint/parser": "^2.0.0",
        "ava": "^2.1.0",
        "conventional-changelog-cli": "^2.0.23",
        "cpy": "^7.3.0",
        "cpy-cli": "^2.0.0",
        "eslint": "^6.1.0",
        "husky": "^3.0.3",
        "lint-staged": "^9.2.1",
        "npm-run-all": "^4.1.5",
        "postcss-nested": "4.1.2",
        "rimraf": "^3.0.0",
        "ts-node": "^8.3.0",
        "typescript": "^3.5.2"
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "test/*/test.ts"
        ]
    },
    "eslintConfig": {
        "extends": "./node_modules/@nlib/lint/.eslintrc.json",
        "env": {
            "es6": true,
            "node": true
        },
        "overrides": [
            {
                "files": [
                    "./test/**/*"
                ],
                "rules": {
                    "class-methods-use-this": "off"
                }
            },
            {
                "files": [
                    "./test/**/src/**/*"
                ],
                "env": {
                    "browser": true,
                    "node": false
                }
            },
            {
                "files": [
                    "@types/**/*"
                ],
                "rules": {
                    "@typescript-eslint/no-explicit-any": "off"
                }
            },
            {
                "files": [
                    "esifycss.config.js"
                ],
                "env": {
                    "browser": false,
                    "node": true
                }
            }
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            ":ignoreModulesAndTests",
            ":unpublishSafe",
            ":semanticPrefixChore",
            ":prNotPending",
            ":prConcurrentLimit10",
            ":prHourlyLimitNone",
            ":label(dependencies)",
            ":automergeMinor"
        ]
    }
}
